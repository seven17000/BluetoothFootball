page {
  background-color: #f5f7fa;
}

.container {
  padding: 20rpx;
  padding-bottom: 120rpx;
}

/* 卡片样式 */
.card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

/* 表单样式 */
.form-group {
  margin-bottom: 24rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 12rpx;
}

.required-mark {
  color: #fa5151;
  margin-right: 4rpx;
}

/* 姓名和号码并排 */
.name-number-row {
  display: flex;
  gap: 20rpx;
  margin-bottom: 24rpx;
}

.name-number-item {
  flex: 1;
  margin-bottom: 0;
}

/* 加入日期和性别并排 */
.join-gender-row {
  display: flex;
  gap: 20rpx;
  margin-bottom: 24rpx;
}

.join-gender-item {
  flex: 1;
  margin-bottom: 0;
}

/* 年龄和身高并排 */
.age-height-row {
  display: flex;
  gap: 20rpx;
  margin-bottom: 24rpx;
}

.age-height-item {
  flex: 1;
  margin-bottom: 0;
}

.form-input {
  width: 100%;
  padding: 20rpx;
  border: 1rpx solid #e5e5e5;
  border-radius: 8rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.form-picker {
  width: 100%;
  padding: 20rpx;
  border: 1rpx solid #e5e5e5;
  border-radius: 8rpx;
  font-size: 28rpx;
  background-color: #fff;
  box-sizing: border-box;
  color: #333;
}

/* 头像上传 */
.avatar-upload {
  width: 160rpx;
  height: 160rpx;
  border: 2rpx dashed #ddd;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  overflow: hidden;
}

.avatar-preview {
  width: 100%;
  height: 100%;
}

.avatar-placeholder {
  color: #999;
  font-size: 24rpx;
  text-align: center;
}

.avatar-placeholder text:first-child {
  font-size: 40rpx;
  margin-bottom: 8rpx;
}

/* 标签选择 */
.tag-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.tag-item {
  padding: 12rpx 24rpx;
  background-color: #f5f5f5;
  border-radius: 32rpx;
  font-size: 26rpx;
  color: #666;
  border: 1rpx solid transparent;
}

.tag-item.active {
  background-color: #e6f7ff;
  color: #1890ff;
  border-color: #1890ff;
}

.tag-item.custom {
  border-style: dashed;
}

.tag-item.custom.active {
  background-color: #fff7e6;
  color: #fa8c16;
  border-color: #fa8c16;
}

/* 添加自定义标签按钮 */
.add-tag-btn {
  border: 1rpx dashed #1989fa;
  color: #1989fa;
  padding: 12rpx 20rpx;
}

/* 自定义标签弹窗 */
.dialog-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1000;
}

.dialog {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 560rpx;
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  z-index: 1001;
}

.dialog-title {
  padding: 30rpx;
  font-size: 32rpx;
  font-weight: bold;
  text-align: center;
  border-bottom: 1rpx solid #f0f0f0;
}

.dialog-content {
  padding: 30rpx;
}

.dialog-input {
  width: 100%;
  padding: 20rpx;
  border: 1rpx solid #e5e5e5;
  border-radius: 8rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.dialog-actions {
  display: flex;
  border-top: 1rpx solid #f0f0f0;
}

.dialog-btn {
  flex: 1;
  padding: 28rpx;
  text-align: center;
  font-size: 30rpx;
}

.dialog-btn.cancel {
  color: #666;
  border-right: 1rpx solid #f0f0f0;
}

.dialog-btn.confirm {
  color: #1989fa;
  font-weight: bold;
}

/* 位置标签 */
.position-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.position-tag {
  padding: 12rpx 24rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  font-size: 26rpx;
  color: #666;
  border: 1rpx solid transparent;
}

.position-tag.active {
  background-color: #667eea;
  color: #fff;
}

/* 能力值表单 */
.ability-form {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 0;
}

.ability-form-item {
  padding: 10rpx 16rpx;
}

.ability-header {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.ability-icon {
  margin-right: 12rpx;
}

.ability-name {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.ability-value {
  font-size: 28rpx;
  font-weight: bold;
  color: #1989fa;
  width: 60rpx;
  text-align: right;
}

.ability-slider {
  margin: 0;
  width: 100%;
  display: block;
}

/* 提交按钮 */
.btn-container {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 20rpx;
  background-color: #fff;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.btn-block {
  width: 90%;
  height: 88rpx;
  font-size: 32rpx;
  line-height: 88rpx;
  display: block;
  border-radius: 8rpx;
  margin: 0 auto;
  padding: 0;
  box-sizing: border-box;
  background-color: #1989fa;
  color: #fff;
  border: none;
}

/* 覆盖全局 .btn 样式 */
button.btn-block {
  display: block;
  margin: 0 auto;
  padding: 0;
  line-height: 88rpx;
  height: 88rpx;
  width: 90%;
  border: none;
  background-color: #1989fa;
  color: #fff;
  border-radius: 8rpx;
}

button.btn-block::after {
  display: none;
}
