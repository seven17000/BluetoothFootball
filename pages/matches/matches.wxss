page {
  background-color: #f5f7fa;
}

.container {
  padding: 20rpx;
}

/* 日期范围筛选 */
.date-filter {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 20rpx 30rpx;
  margin-bottom: 20rpx;
}

.filter-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16rpx 0;
}

.filter-row:first-child {
  border-bottom: 1rpx solid #f0f0f0;
}

.filter-label {
  font-size: 28rpx;
  color: #666;
}

.filter-pickers {
  display: flex;
  gap: 20rpx;
}

.picker {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 20rpx;
  background-color: #f5f7fa;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #333;
}

.picker .arrow {
  font-size: 18rpx;
  color: #999;
}

/* 统计行 */
.stats-row {
  display: flex;
  justify-content: space-around;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx 0;
  margin-bottom: 20rpx;
}

.stat-item {
  text-align: center;
}

.stat-item .value {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.stat-item .label {
  font-size: 24rpx;
  color: #999;
}

/* 比赛列表 */
.match-list {
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
}

.match-item {
  display: flex;
  align-items: center;
  padding: 24rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.match-item:last-child {
  border-bottom: none;
}

.match-date-box {
  width: 80rpx;
  text-align: center;
  margin-right: 24rpx;
}

.match-date-box .month {
  display: block;
  font-size: 22rpx;
  color: #999;
}

.match-date-box .day {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.match-content {
  flex: 1;
}

.match-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.match-header .opponent {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.result {
  font-size: 22rpx;
  padding: 6rpx 16rpx;
  border-radius: 4rpx;
}

.result.win {
  background-color: #f6ffed;
  color: #52c41a;
}

.result.draw {
  background-color: #fffbe6;
  color: #faad14;
}

.result.loss {
  background-color: #fff2f0;
  color: #fa5151;
}

.match-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.match-info .score {
  font-size: 28rpx;
  font-weight: bold;
  color: #1989fa;
}

.match-info .location {
  font-size: 22rpx;
  color: #999;
}

.match-arrow {
  color: #ccc;
  font-size: 28rpx;
  margin-left: 16rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 40rpx;
}

.empty-state .empty-text {
  color: #999;
  font-size: 28rpx;
}

/* 悬浮按钮 */
.fab {
  position: fixed;
  right: 40rpx;
  bottom: 100rpx;
  width: 100rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  background: linear-gradient(135deg, #52c41a 0%, #389e0d 100%);
  color: #fff;
  border-radius: 50%;
  font-size: 60rpx;
  box-shadow: 0 8rpx 20rpx rgba(82, 196, 26, 0.4);
}
