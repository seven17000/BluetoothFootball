page {
  background-color: #f5f7fa;
}

.container {
  padding: 20rpx;
}

/* 赛季选择器 */
.season-selector {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 20rpx 30rpx;
  margin-bottom: 20rpx;
}

.season-picker {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.season-label {
  font-size: 28rpx;
  color: #666;
}

.season-value {
  font-size: 28rpx;
  font-weight: bold;
  color: #1989fa;
  flex: 1;
  text-align: center;
}

.season-arrow {
  font-size: 20rpx;
  color: #999;
}

/* 日期范围筛选 */
.date-filter {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 20rpx 30rpx;
  margin-bottom: 20rpx;
}

.filter-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16rpx 0;
}

.filter-row:first-child {
  border-bottom: 1rpx solid #f0f0f0;
}

.filter-label {
  font-size: 28rpx;
  color: #666;
}

.filter-pickers {
  display: flex;
  gap: 20rpx;
}

.picker {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 20rpx;
  background-color: #f5f7fa;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #333;
}

.picker .arrow {
  font-size: 18rpx;
  color: #999;
}

/* 统计行 */
.stats-row {
  display: flex;
  justify-content: space-around;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx 0;
  margin-bottom: 20rpx;
}

.stat-item {
  text-align: center;
}

.stat-item .value {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.stat-item .label {
  font-size: 24rpx;
  color: #999;
}

/* 比赛列表 */
.match-list {
  margin: 0 -20rpx;
  padding: 0 20rpx;
}

.match-item {
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.match-item:last-child {
  border-bottom: none;
}

.match-row-1 {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 8rpx;
}

.match-team {
  font-size: 32rpx;
  font-weight: bold;
  color: #1989fa;
  flex: 1;
}

.match-result-capsule {
  font-size: 24rpx;
  font-weight: bold;
  color: #fff;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  flex: 1;
  text-align: center;
}

.match-result-capsule.win {
  background: linear-gradient(135deg, #52c41a 0%, #389e0d 100%);
}

.match-result-capsule.draw {
  background: linear-gradient(135deg, #faad14 0%, #d48806 100%);
}

.match-result-capsule.loss {
  background: linear-gradient(135deg, #fa5151 0%, #cf1322 100%);
}

.match-opponent {
  font-size: 32rpx;
  font-weight: bold;
  color: #1989fa;
  flex: 1;
  text-align: right;
}

.match-row-2 {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.match-jersey-left {
  font-size: 22rpx;
  color: #999;
  flex: 1;
}

.match-datetime {
  font-size: 24rpx;
  color: #666;
  flex: 1;
  text-align: center;
}

.match-datetime text {
  display: inline-block;
  margin-right: 16rpx;
}

.match-datetime text:last-child {
  margin-right: 0;
}

.match-jersey-right {
  font-size: 22rpx;
  color: #999;
  flex: 1;
  text-align: right;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 40rpx;
}

.empty-state .empty-text {
  color: #999;
  font-size: 28rpx;
}

/* 悬浮按钮 */
.fab {
  position: fixed;
  right: 40rpx;
  bottom: 100rpx;
  width: 100rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  background: linear-gradient(135deg, #52c41a 0%, #389e0d 100%);
  color: #fff;
  border-radius: 50%;
  font-size: 60rpx;
  box-shadow: 0 8rpx 20rpx rgba(82, 196, 26, 0.4);
}

/* 加载提示 */
.loading-tip {
  text-align: center;
  padding: 30rpx 0 120rpx;
  color: #999;
  font-size: 24rpx;
}
