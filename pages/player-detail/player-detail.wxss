page {
  background-color: #f5f7fa;
}

.container {
  padding: 20rpx;
}

/* 卡片样式 */
.card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

/* 个人信息卡片 */
.profile-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
}

.profile-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 0;
}

.avatar-wrapper {
  margin-right: 0;
  margin-bottom: 20rpx;
}

.avatar {
  width: 140rpx;
  height: 140rpx;
  line-height: 140rpx;
  text-align: center;
  background-color: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  font-size: 48rpx;
  font-weight: bold;
  border: 4rpx solid rgba(255, 255, 255, 0.5);
}

.avatar-img {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.5);
}

.profile-info {
  flex: 1;
  text-align: center;
}

.name {
  font-size: 44rpx;
  font-weight: bold;
  margin-bottom: 12rpx;
}

.position {
  font-size: 28rpx;
  opacity: 0.9;
  margin-bottom: 16rpx;
}

.tags {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  gap: 12rpx;
}

.tag {
  font-size: 22rpx;
  padding: 6rpx 16rpx;
  background-color: rgba(255, 255, 255, 0.2);
  border-radius: 4rpx;
}

/* 个人信息卡片 */
.info-grid {
  display: flex;
  flex-wrap: wrap;
}

.info-item {
  width: 33.33%;
  padding: 16rpx 0;
  box-sizing: border-box;
}

.info-label {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.info-value {
  font-size: 28rpx;
  color: #333;
}

/* 能力值卡片 */
.ability-chart {
  width: 100%;
  height: 500rpx;
  position: relative;
  margin-bottom: 20rpx;
}

.radar-canvas {
  width: 100%;
  height: 100%;
}

.ability-list {
  margin-bottom: 20rpx;
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 0;
}

.ability-item {
  padding: 10rpx 16rpx;
}

.ability-header {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.ability-icon {
  margin-right: 10rpx;
}

.ability-name {
  flex: 1;
  font-size: 26rpx;
  color: #333;
}

.ability-value {
  font-size: 26rpx;
  font-weight: bold;
  color: #1989fa;
}

.ability-bar {
  height: 8rpx;
  background-color: #f0f0f0;
  border-radius: 4rpx;
  overflow: hidden;
}

.ability-progress {
  height: 100%;
  background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
  border-radius: 4rpx;
}

.ability-total {
  text-align: right;
  padding-top: 16rpx;
  border-top: 1rpx solid #f0f0f0;
  font-size: 28rpx;
  color: #666;
}

.total-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #1989fa;
}

/* 比赛记录 */
.match-record {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  cursor: pointer;
}

.match-record:last-child {
  border-bottom: none;
}

.record-date {
  width: 140rpx;
  font-size: 24rpx;
  color: #999;
}

.record-info {
  flex: 1;
}

.record-info .opponent {
  font-size: 28rpx;
  color: #333;
  margin-right: 16rpx;
}

.record-info .result {
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
}

.record-info .result.win {
  background-color: #f6ffed;
  color: #52c41a;
}

.record-info .result.draw {
  background-color: #fffbe6;
  color: #faad14;
}

.record-info .result.loss {
  background-color: #fff2f0;
  color: #fa5151;
}

.record-stats {
  font-size: 24rpx;
  color: #999;
}

.record-stats text {
  margin-left: 16rpx;
}

.empty-text {
  text-align: center;
  color: #999;
  padding: 40rpx 0;
}

/* 加载更多 */
.loading-more {
  text-align: center;
  padding: 20rpx;
  color: #999;
  font-size: 24rpx;
}

/* 查看更多按钮 */
.view-more {
  margin-top: 20rpx;
  padding: 20rpx;
  text-align: center;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  color: #1989fa;
  font-size: 26rpx;
}

/* 操作按钮组 */
.action-buttons {
  display: flex;
  gap: 20rpx;
  margin-top: 40rpx;
}

/* 编辑按钮 */
.edit-btn {
  flex: 1;
  padding: 20rpx;
  text-align: center;
  background-color: #1989fa;
  color: #fff;
  font-size: 28rpx;
  border-radius: 8rpx;
}

/* 删除按钮 */
.delete-btn {
  flex: 1;
  padding: 20rpx;
  text-align: center;
  background-color: #fff;
  color: #fa5151;
  font-size: 28rpx;
  border-radius: 8rpx;
  border: 1rpx solid #fa5151;
}

/* 加载状态 */
.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
  color: #999;
}
