page {
  background-color: #f5f7fa;
}

.container {
  padding: 20rpx;
  padding-bottom: 120rpx;
}

/* 日历头部 */
.calendar-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
}

.header-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.arrow-left,
.arrow-right {
  width: 0;
  height: 0;
  border: 12rpx solid transparent;
}

.arrow-left {
  border-right-color: #333;
}

.arrow-right {
  border-left-color: #333;
}

.header-title {
  text-align: center;
}

.header-title .year {
  display: block;
  font-size: 24rpx;
  color: #999;
}

.header-title .month {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
}

/* 星期标题 */
.week-header {
  display: flex;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 16rpx 16rpx 0 0;
}

.week-item {
  flex: 1;
  text-align: center;
  font-size: 26rpx;
  color: #999;
}

/* 日历网格 */
.calendar-grid {
  display: flex;
  flex-wrap: wrap;
  background-color: #fff;
  border-radius: 0 0 16rpx 16rpx;
  padding-bottom: 20rpx;
}

.grid-item {
  width: calc(14.28% - 2rpx);
  min-height: 100rpx;
  margin: 1rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  padding-top: 10rpx;
  border-radius: 8rpx;
  position: relative;
}

.grid-item.other-month {
  opacity: 0.3;
}

.grid-item.today {
  background-color: #e6f7ff;
}

.grid-item.today .day-text {
  color: #1890ff;
  font-weight: bold;
}

.grid-item.selected {
  background-color: #1890ff;
}

.grid-item.selected .day-text {
  color: #fff;
}

.day-text {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 4rpx;
}

.day-events {
  display: flex;
  gap: 4rpx;
}

.event-dot {
  width: 8rpx;
  height: 8rpx;
  border-radius: 50%;
}

.event-dot.match {
  background-color: #52c41a;
}

.event-dot.training {
  background-color: #1890ff;
}

.event-dot.meeting {
  background-color: #722ed1;
}

/* 图例 */
.legend {
  display: flex;
  justify-content: center;
  gap: 40rpx;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 0 0 16rpx 16rpx;
  margin-bottom: 20rpx;
}

.legend-item {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #666;
}

.legend-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  margin-right: 8rpx;
}

.legend-dot.match {
  background-color: #52c41a;
}

.legend-dot.training {
  background-color: #1890ff;
}

.legend-dot.meeting {
  background-color: #722ed1;
}

/* 卡片样式 */
.card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

/* 当日详情 */
.day-detail {
  margin: -10rpx 0;
}

.event-item {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.event-item:last-child {
  border-bottom: none;
}

.event-time {
  width: 80rpx;
  font-size: 24rpx;
  color: #999;
}

.event-info {
  flex: 1;
}

.event-title {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 4rpx;
}

.event-desc {
  font-size: 22rpx;
  color: #999;
}

.event-actions {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  font-size: 24rpx;
  color: #1989fa;
}

.action-btn.delete {
  color: #fa5151;
}

.empty-text {
  text-align: center;
  color: #999;
  padding: 40rpx 0;
}

/* 悬浮按钮 */
.fab {
  position: fixed;
  right: 40rpx;
  bottom: 100rpx;
  width: 100rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border-radius: 50%;
  font-size: 60rpx;
  box-shadow: 0 8rpx 20rpx rgba(102, 126, 234, 0.4);
}
