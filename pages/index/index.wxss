page {
  background-color: #f5f7fa;
}

.container {
  padding: 20rpx;
}

/* 简洁统计栏 */
.stats-bar {
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  color: #fff;
}

.stat-item {
  text-align: center;
  flex: 1;
}

.stat-divider {
  width: 1rpx;
  height: 60rpx;
  background: rgba(255, 255, 255, 0.3);
  margin: 0 40rpx;
}

.stats-bar .stat-value {
  font-size: 48rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 8rpx;
}

.stats-bar .stat-label {
  font-size: 24rpx;
  opacity: 0.9;
}

/* 统计网格 */
.stats-grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.stats-grid .stat-item {
  width: calc(50% - 10rpx);
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-sizing: border-box;
  color: #fff;
}

.stats-grid .stat-item:nth-child(3),
.stats-grid .stat-item:nth-child(4) {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
}

.stats-grid .stat-value {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.stats-grid .stat-label {
  font-size: 24rpx;
  opacity: 0.9;
}

/* 卡片样式 */
.card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.card-header .title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.more {
  font-size: 24rpx;
  color: #999;
}

/* 比赛列表 */
.match-list {
  margin: 0 -20rpx;
  padding: 0 20rpx;
}

.match-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.match-item:last-child {
  border-bottom: none;
}

.match-date {
  width: 80rpx;
  text-align: center;
  margin-right: 20rpx;
}

.date-day {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.date-month {
  font-size: 22rpx;
  color: #999;
}

.match-info {
  flex: 1;
}

.match-opponent {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.vs {
  font-size: 20rpx;
  color: #999;
  margin-right: 10rpx;
}

.match-result {
  display: flex;
  align-items: center;
}

.score {
  font-size: 28rpx;
  font-weight: bold;
  margin-right: 16rpx;
}

.result-tag {
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
}

.result-tag.win {
  background-color: #f6ffed;
  color: #52c41a;
}

.result-tag.draw {
  background-color: #fffbe6;
  color: #faad14;
}

.result-tag.loss {
  background-color: #fff2f0;
  color: #fa5151;
}

.match-location {
  font-size: 22rpx;
  color: #999;
}

/* 赛程列表 */
.schedule-list {
  margin: 0 -20rpx;
  padding: 0 20rpx;
}

.schedule-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.schedule-item:last-child {
  border-bottom: none;
}

.schedule-date {
  width: 80rpx;
  text-align: center;
  margin-right: 20rpx;
}

.s-day {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.s-month {
  font-size: 22rpx;
  color: #999;
}

.schedule-info {
  flex: 1;
}

.schedule-title {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 6rpx;
}

.schedule-time {
  font-size: 22rpx;
  color: #999;
}

.schedule-type {
  font-size: 22rpx;
  padding: 6rpx 16rpx;
  border-radius: 4rpx;
}

.schedule-type.training {
  background-color: #e6f7ff;
  color: #1890ff;
}

.schedule-type.match {
  background-color: #f6ffed;
  color: #52c41a;
}

/* 射手榜 */
.top-scorer-list {
  margin: 0 -20rpx;
  padding: 0 20rpx;
}

.scorer-item {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.scorer-item:last-child {
  border-bottom: none;
}

.rank {
  width: 48rpx;
  height: 48rpx;
  line-height: 48rpx;
  text-align: center;
  border-radius: 50%;
  background-color: #f0f0f0;
  font-size: 24rpx;
  font-weight: bold;
  margin-right: 16rpx;
}

.rank-1 {
  background: linear-gradient(135deg, #ffd700 0%, #ffb347 100%);
  color: #fff;
}

.rank-2 {
  background: linear-gradient(135deg, #c0c0c0 0%, #a8a8a8 100%);
  color: #fff;
}

.rank-3 {
  background: linear-gradient(135deg, #cd7f32 0%, #b87333 100%);
  color: #fff;
}

.player-info {
  flex: 1;
}

.player-name {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 4rpx;
}

.player-team {
  font-size: 22rpx;
  color: #999;
}

.goal-count {
  display: flex;
  align-items: baseline;
}

.goals {
  font-size: 36rpx;
  font-weight: bold;
  color: #1989fa;
}

.goals-label {
  font-size: 22rpx;
  color: #999;
  margin-left: 4rpx;
}

/* 快捷入口 */
.quick-entry {
  display: flex;
  justify-content: space-between;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.entry-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.entry-item image {
  width: 64rpx;
  height: 64rpx;
  margin-bottom: 10rpx;
}

.entry-item text {
  font-size: 24rpx;
  color: #666;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 40rpx 0;
  color: #999;
}

.empty-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.empty-desc {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 30rpx;
}

.empty-steps {
  text-align: left;
  background-color: #f5f7fa;
  border-radius: 12rpx;
  padding: 24rpx 30rpx;
  margin-top: 20rpx;
}

.empty-steps text {
  display: block;
  font-size: 26rpx;
  color: #666;
  line-height: 1.8;
}
