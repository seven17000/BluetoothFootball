page {
  background-color: #f5f7fa;
}

.container {
  padding: 20rpx;
}

/* 简洁统计栏 */
.stats-bar {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.stat-item {
  text-align: center;
  flex: 1;
}

.stat-divider {
  width: 1rpx;
  height: 60rpx;
  background: rgba(255, 255, 255, 0.3);
  margin: 0 20rpx;
}

.team-logo {
  width: 120rpx;
  height: 120rpx;
}

.stats-bar .stat-value {
  font-size: 48rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 8rpx;
  color: #333;
}

.stats-bar .stat-label {
  font-size: 24rpx;
  color: #999;
}

/* 本赛季数据 */
.season-stats {
  display: flex;
  justify-content: space-around;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 24rpx 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.season-stat-item {
  text-align: center;
  flex: 1;
}

.season-stat-value {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.season-stat-label {
  font-size: 22rpx;
  color: #999;
}

.season-stat-item.win .season-stat-value {
  color: #52c41a;
}

.season-stat-item.draw .season-stat-value {
  color: #faad14;
}

.season-stat-item.loss .season-stat-value {
  color: #fa5151;
}

/* 统计网格 */
.stats-grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.stats-grid .stat-item {
  width: calc(50% - 10rpx);
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-sizing: border-box;
  color: #fff;
}

.stats-grid .stat-item:nth-child(3),
.stats-grid .stat-item:nth-child(4) {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
}

.stats-grid .stat-value {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.stats-grid .stat-label {
  font-size: 24rpx;
  opacity: 0.9;
}

/* 卡片样式 */
.card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.card-header .title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.more {
  font-size: 24rpx;
  color: #999;
}

/* 比赛列表 */
.match-list {
  margin: 0 -20rpx;
  padding: 0 20rpx;
}

.match-item {
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.match-item:last-child {
  border-bottom: none;
}

.match-row-1 {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 8rpx;
}

.match-team {
  font-size: 32rpx;
  font-weight: bold;
  color: #1989fa;
  flex: 1;
}

.match-result-capsule {
  font-size: 24rpx;
  font-weight: bold;
  color: #fff;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  flex: 1;
  text-align: center;
}

.match-result-capsule.win {
  background: linear-gradient(135deg, #52c41a 0%, #389e0d 100%);
}

.match-result-capsule.draw {
  background: linear-gradient(135deg, #faad14 0%, #d48806 100%);
}

.match-result-capsule.loss {
  background: linear-gradient(135deg, #fa5151 0%, #cf1322 100%);
}

.match-opponent {
  font-size: 32rpx;
  font-weight: bold;
  color: #1989fa;
  flex: 1;
  text-align: right;
}

.match-row-2 {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.match-jersey-left {
  font-size: 22rpx;
  color: #999;
  flex: 1;
}

.match-datetime {
  font-size: 24rpx;
  color: #666;
  flex: 1;
  text-align: center;
}

.match-datetime text {
  display: inline-block;
  margin-right: 16rpx;
}

.match-datetime text:last-child {
  margin-right: 0;
}

.match-jersey-right {
  font-size: 22rpx;
  color: #999;
  flex: 1;
  text-align: right;
}

/* 赛程列表 */
.schedule-list {
  margin: 0 -20rpx;
  padding: 0 20rpx;
}

.schedule-item {
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.schedule-item:last-child {
  border-bottom: none;
}

.schedule-row-1 {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 8rpx;
}

.schedule-team {
  font-size: 32rpx;
  font-weight: bold;
  color: #1989fa;
  flex: 1;
}

.schedule-time-capsule {
  font-size: 28rpx;
  font-weight: bold;
  color: #1989fa;
  background-color: #e6f7ff;
  padding: 6rpx 16rpx;
  border-radius: 8rpx;
  flex: 1;
  text-align: center;
}

.schedule-opponent {
  font-size: 32rpx;
  font-weight: bold;
  color: #1989fa;
  flex: 1;
  text-align: right;
}

.schedule-row-2 {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.schedule-jersey-left {
  font-size: 22rpx;
  color: #999;
  flex: 1;
}

.schedule-datetime {
  font-size: 24rpx;
  color: #666;
  flex: 1;
  text-align: center;
}

.schedule-datetime text {
  display: inline-block;
  margin-right: 16rpx;
}

.schedule-datetime text:last-child {
  margin-right: 0;
}

.schedule-jersey-right {
  font-size: 22rpx;
  color: #999;
  flex: 1;
  text-align: right;
}

/* 射手榜 */
.top-scorer-list {
  margin: 0 -20rpx;
  padding: 0 20rpx;
}

.scorer-item {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.scorer-item:last-child {
  border-bottom: none;
}

.rank {
  width: 48rpx;
  height: 48rpx;
  line-height: 48rpx;
  text-align: center;
  border-radius: 50%;
  background-color: #f0f0f0;
  font-size: 24rpx;
  font-weight: bold;
  margin-right: 16rpx;
}

.rank-1 {
  background: linear-gradient(135deg, #ffd700 0%, #ffb347 100%);
  color: #fff;
}

.rank-2 {
  background: linear-gradient(135deg, #c0c0c0 0%, #a8a8a8 100%);
  color: #fff;
}

.rank-3 {
  background: linear-gradient(135deg, #cd7f32 0%, #b87333 100%);
  color: #fff;
}

.player-info {
  flex: 1;
}

.player-name {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 4rpx;
}

.player-team {
  font-size: 22rpx;
  color: #999;
}

.goal-count {
  display: flex;
  align-items: baseline;
}

.goals {
  font-size: 36rpx;
  font-weight: bold;
  color: #1989fa;
}

.goals-label {
  font-size: 22rpx;
  color: #999;
  margin-left: 4rpx;
}

/* 快捷入口 */
.quick-entry {
  display: flex;
  justify-content: space-between;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.entry-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.entry-item image {
  width: 64rpx;
  height: 64rpx;
  margin-bottom: 10rpx;
}

.entry-item text {
  font-size: 24rpx;
  color: #666;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 40rpx 0;
  color: #999;
}

.empty-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.empty-desc {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 30rpx;
}

.empty-steps {
  text-align: left;
  background-color: #f5f7fa;
  border-radius: 12rpx;
  padding: 24rpx 30rpx;
  margin-top: 20rpx;
}

.empty-steps text {
  display: block;
  font-size: 26rpx;
  color: #666;
  line-height: 1.8;
}

/* 射手榜助攻榜两列布局 */
.stats-row {
  display: flex;
  gap: 20rpx;
}

.stats-card {
  flex: 1;
  margin-bottom: 0;
  padding: 24rpx;
}

.stats-card .card-header {
  margin-bottom: 16rpx;
}

.stats-card .title {
  font-size: 28rpx;
}

.stats-card .more {
  font-size: 22rpx;
}

.stats-card .top-scorer-list {
  margin: 0 -12rpx;
  padding: 0 12rpx;
}

.stats-card .scorer-item {
  padding: 12rpx 0;
}

.stats-card .rank {
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 22rpx;
  margin-right: 12rpx;
}

.stats-card .player-name {
  font-size: 26rpx;
}

.stats-card .goals {
  font-size: 32rpx;
}
