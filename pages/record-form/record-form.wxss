page {
  background-color: #f5f7fa;
}

.container {
  padding: 20rpx;
  padding-bottom: 120rpx;
}

/* 卡片样式 */
.card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

/* 比赛信息卡片 */
.match-info-card {
  background: linear-gradient(135deg, #52c41a 0%, #389e0d 100%);
  color: #fff;
}

.match-info-card .opponent {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.match-info-card .match-date {
  font-size: 26rpx;
  opacity: 0.9;
}

/* 球员选择 */
.player-select {
  margin: -10rpx;
}

.player-checkbox {
  display: flex;
  align-items: center;
  padding: 16rpx;
  margin: 10rpx;
  background-color: #f5f7fa;
  border-radius: 12rpx;
  border: 2rpx solid transparent;
}

.player-checkbox.selected {
  background-color: #e6f7ff;
  border-color: #1890ff;
}

.player-checkbox checkbox {
  margin-right: 16rpx;
}

.player-info {
  display: flex;
  flex-direction: column;
}

.player-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.player-position {
  font-size: 22rpx;
  color: #999;
}

/* 球员记录表单 */
.record-form {
  margin: -10rpx;
}

.player-record {
  padding: 20rpx;
  margin: 10rpx;
  background-color: #fafafa;
  border-radius: 12rpx;
  border: 1rpx solid #f0f0f0;
}

.record-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.record-header .player-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.position-tag {
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  background-color: #e6f7ff;
  color: #1890ff;
  border-radius: 4rpx;
}

.record-fields {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.field-item {
  display: flex;
  align-items: center;
  width: calc(50% - 10rpx);
}

.field-item.full {
  width: 100%;
}

.field-label {
  width: 80rpx;
  font-size: 26rpx;
  color: #666;
}

/* 步进器 */
.stepper {
  display: flex;
  align-items: center;
  flex: 1;
}

.stepper-btn {
  width: 56rpx;
  height: 56rpx;
  line-height: 56rpx;
  text-align: center;
  background-color: #f0f0f0;
  border-radius: 8rpx;
  font-size: 32rpx;
  color: #333;
}

.stepper-btn:active {
  background-color: #e0e0e0;
}

.stepper-input {
  width: 80rpx;
  height: 56rpx;
  line-height: 56rpx;
  text-align: center;
  font-size: 28rpx;
  border: 1rpx solid #e5e5e5;
  margin: 0 10rpx;
  border-radius: 8rpx;
}

/* 评分滑块 */
.rating-slider {
  flex: 1;
  margin: 0 20rpx;
}

.rating-value {
  width: 60rpx;
  text-align: right;
  font-size: 28rpx;
  font-weight: bold;
  color: #faad14;
}

/* 提交按钮 */
.btn-container {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 20rpx;
  background-color: #fff;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.btn-block {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 32rpx;
}
