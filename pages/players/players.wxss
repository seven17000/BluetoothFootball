page {
  background-color: #f5f7fa;
}

.container {
  padding: 20rpx;
}

/* 页面标题 */
.page-header {
  padding: 10rpx 0 30rpx;
}

.page-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #333;
}

/* 搜索框 */
.search-box {
  display: flex;
  align-items: center;
  background-color: #fff;
  border-radius: 44rpx;
  padding: 20rpx 30rpx;
  margin-bottom: 20rpx;
}

.search-icon {
  font-size: 28rpx;
  margin-right: 16rpx;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

/* 筛选栏 */
.filter-bar {
  display: flex;
  gap: 16rpx;
  margin-bottom: 20rpx;
  overflow-x: auto;
}

.filter-item {
  padding: 16rpx 28rpx;
  border-radius: 40rpx;
  font-size: 26rpx;
  color: #666;
  background-color: #fff;
  white-space: nowrap;
  transition: all 0.2s;
}

.filter-item.active {
  background-color: #1989fa;
  color: #fff;
}

/* 球员列表 */
.player-list {
  background-color: #fff;
  border-radius: 24rpx;
  overflow: hidden;
}

.player-item {
  display: flex;
  align-items: center;
  padding: 28rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

/* 头像 */
.player-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  overflow: hidden;
}

.player-avatar .avatar-img {
  width: 100%;
  height: 100%;
}

.avatar-text {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 600;
  color: #fff;
  border-radius: 50%;
}

.player-item:last-child {
  border-bottom: none;
}

.player-info {
  flex: 1;
  margin-left: 24rpx;
}

.player-name-row {
  display: flex;
  align-items: center;
}

.player-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.player-number-inline {
  font-size: 24rpx;
  color: #1989fa;
  font-weight: 600;
  margin-left: 12rpx;
}

.player-position {
  font-size: 24rpx;
  color: #999;
  margin-top: 6rpx;
  display: block;
}

.player-tags {
  display: flex;
  gap: 8rpx;
  margin-right: 16rpx;
}

.tag {
  font-size: 20rpx;
  padding: 6rpx 16rpx;
  background-color: #e6f7ff;
  color: #1890ff;
  border-radius: 6rpx;
}

.player-arrow {
  color: #ccc;
  font-size: 28rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  color: #999;
  font-size: 28rpx;
}

/* 悬浮按钮 */
.fab {
  position: fixed;
  right: 40rpx;
  bottom: 100rpx;
  width: 100rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  background: linear-gradient(135deg, #1989fa 0%, #1067c7 100%);
  color: #fff;
  border-radius: 50%;
  box-shadow: 0 8rpx 24rpx rgba(25, 137, 250, 0.4);
}

.fab-icon {
  font-size: 56rpx;
  font-weight: 300;
}

/* 加载提示 */
.loading-tip {
  text-align: center;
  padding: 30rpx 0 120rpx;
  color: #999;
  font-size: 24rpx;
}
