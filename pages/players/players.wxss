page {
  background-color: #f5f7fa;
}

.container {
  padding: 20rpx;
}

/* 搜索框 */
.search-box {
  display: flex;
  align-items: center;
  background-color: #fff;
  border-radius: 40rpx;
  padding: 16rpx 30rpx;
  margin-bottom: 20rpx;
}

.search-box icon {
  margin-right: 16rpx;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
}

/* 筛选栏 */
.filter-bar {
  display: flex;
  justify-content: space-around;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.filter-item {
  font-size: 26rpx;
  color: #666;
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
}

.filter-item.active {
  background-color: #1989fa;
  color: #fff;
}

/* 球员列表 */
.player-list {
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
}

.player-item {
  display: flex;
  align-items: center;
  padding: 24rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

/* 头像 */
.player-avatar {
  width: 80rpx;
  height: 80rpx;
  margin-right: 16rpx;
}

.player-avatar .avatar-img {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}

.player-avatar .avatar-text {
  width: 80rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border-radius: 50%;
  font-size: 28rpx;
  font-weight: bold;
}

.player-item:last-child {
  border-bottom: none;
}

.player-number {
  font-size: 28rpx;
  color: #1989fa;
  font-weight: bold;
  margin-right: 20rpx;
}

.player-number-inline {
  font-size: 24rpx;
  color: #1989fa;
  font-weight: bold;
  margin-left: 8rpx;
}

.player-info {
  flex: 1;
}

.player-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 6rpx;
  display: flex;
  align-items: center;
}

.name-text {
  display: inline-block;
  width: 140rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.player-number-inline {
  font-size: 24rpx;
  color: #1989fa;
  font-weight: bold;
  margin-left: 8rpx;
}

.player-position {
  font-size: 24rpx;
  color: #999;
}

.player-tags {
  display: flex;
  flex-wrap: wrap;
  margin-right: 20rpx;
}

.tag {
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  background-color: #e6f7ff;
  color: #1890ff;
  border-radius: 4rpx;
  margin-left: 8rpx;
}

.player-arrow {
  color: #ccc;
  font-size: 28rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 40rpx;
}

.empty-state .empty-icon {
  font-size: 120rpx;
  margin-bottom: 20rpx;
}

.empty-state text {
  color: #999;
}

/* 悬浮按钮 */
.fab {
  position: fixed;
  right: 40rpx;
  bottom: 100rpx;
  width: 100rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border-radius: 50%;
  font-size: 60rpx;
  box-shadow: 0 8rpx 20rpx rgba(102, 126, 234, 0.4);
}

/* 加载提示 */
.loading-tip {
  text-align: center;
  padding: 30rpx 0 120rpx;
  color: #999;
  font-size: 24rpx;
}
