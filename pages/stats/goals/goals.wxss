page {
  background-color: #f5f7fa;
}

.container {
  padding: 20rpx;
}

/* 页面头部 */
.page-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 0 30rpx;
}

.page-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #333;
}

.season-picker {
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
  background-color: #fff;
  border-radius: 32rpx;
}

.season-value {
  font-size: 26rpx;
  color: #333;
}

.season-arrow {
  font-size: 18rpx;
  color: #999;
  margin-left: 8rpx;
}

/* 赛季数据统计网格 */
.season-stats-grid {
  display: flex;
  justify-content: space-between;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.stat-card {
  width: calc(20% - 12rpx);
  background-color: #e6f7ff;
  border-radius: 16rpx;
  padding: 20rpx 8rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.stat-card .stat-value {
  font-size: 36rpx;
  font-weight: 700;
  color: #1989fa;
}

.stat-card .stat-label {
  font-size: 20rpx;
  color: #666;
  margin-top: 4rpx;
}

.stat-card.win {
  background-color: #f6ffed;
}

.stat-card.win .stat-value {
  color: #52c41a;
}

.stat-card.draw {
  background-color: #fffbe6;
}

.stat-card.draw .stat-value {
  color: #faad14;
}

.stat-card.loss {
  background-color: #f5f5f5;
}

.stat-card.loss .stat-value {
  color: #666;
}

/* Tab 切换 */
.tab-bar {
  display: flex;
  background-color: #fff;
  border-radius: 48rpx;
  padding: 8rpx;
  margin-bottom: 24rpx;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 24rpx;
  font-size: 28rpx;
  font-weight: 500;
  color: #666;
  border-radius: 40rpx;
  transition: all 0.2s;
}

.tab-item.active {
  background-color: #1989fa;
  color: #fff;
  font-weight: 600;
}

/* 卡片样式 */
.card {
  background-color: #fff;
  border-radius: 24rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.card-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
}

/* 排行榜列表 */
.rank-list {
  margin: 0 -10rpx;
}

.rank-item {
  display: flex;
  align-items: center;
  padding: 20rpx 10rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.rank-item:last-child {
  border-bottom: none;
}

.rank-num {
  width: 48rpx;
  height: 48rpx;
  line-height: 48rpx;
  text-align: center;
  border-radius: 50%;
  background-color: #f0f0f0;
  font-size: 26rpx;
  font-weight: 700;
  color: #fff;
}

.rank-num.top-1 {
  background: linear-gradient(135deg, #ffd700 0%, #ffb347 100%);
}

.rank-num.top-2 {
  background: linear-gradient(135deg, #c0c0c0 0%, #a8a8a8 100%);
}

.rank-num.top-3 {
  background: linear-gradient(135deg, #cd7f32 0%, #b87333 100%);
}

.rank-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 20rpx;
  overflow: hidden;
}

.rank-avatar .avatar-img {
  width: 100%;
  height: 100%;
}

.rank-avatar .avatar-text {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: 600;
  color: #fff;
  border-radius: 50%;
}

.rank-info {
  flex: 1;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
}

.player-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
}

.player-position {
  font-size: 24rpx;
  color: #999;
  margin-top: 4rpx;
}

.rank-value {
  display: flex;
  align-items: baseline;
}

.value {
  font-size: 36rpx;
  font-weight: 700;
  color: #1989fa;
}

.unit {
  font-size: 22rpx;
  color: #999;
  margin-left: 4rpx;
}

/* 比赛列表 */
.match-list {
  margin: 0 -10rpx;
}

.match-item {
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.match-item:last-child {
  border-bottom: none;
}

.match-row-1 {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 8rpx;
}

.match-team {
  font-size: 28rpx;
  font-weight: 600;
  color: #1989fa;
  flex: 1;
}

.match-result-capsule {
  font-size: 24rpx;
  font-weight: 600;
  color: #fff;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  flex: 1;
  text-align: center;
}

.match-result-capsule.win {
  background: linear-gradient(135deg, #52c41a 0%, #389e0d 100%);
}

.match-result-capsule.draw {
  background: linear-gradient(135deg, #faad14 0%, #d48806 100%);
}

.match-result-capsule.loss {
  background: linear-gradient(135deg, #fa5151 0%, #cf1322 100%);
}

.match-opponent {
  font-size: 28rpx;
  font-weight: 600;
  color: #1989fa;
  flex: 1;
  text-align: right;
}

.match-row-2 {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.match-jersey-left {
  font-size: 22rpx;
  color: #999;
  flex: 1;
}

.match-datetime {
  font-size: 22rpx;
  color: #666;
  flex: 1;
  text-align: center;
}

.match-datetime text {
  display: inline-block;
  margin-right: 12rpx;
}

.match-datetime text:last-child {
  margin-right: 0;
}

.match-jersey-right {
  font-size: 22rpx;
  color: #999;
  flex: 1;
  text-align: right;
}

/* 空状态 */
.empty-text {
  text-align: center;
  padding: 60rpx 0;
  color: #999;
  font-size: 26rpx;
}

/* 加载提示 */
.loading-tip {
  text-align: center;
  padding: 30rpx 0;
  color: #999;
  font-size: 24rpx;
}
