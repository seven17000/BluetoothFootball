page {
  background-color: #f5f7fa;
}

.container {
  padding: 20rpx;
}

/* Tab栏 */
.tab-bar {
  display: flex;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 10rpx;
  margin-bottom: 20rpx;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 20rpx;
  font-size: 28rpx;
  color: #666;
  border-radius: 12rpx;
}

.tab-item.active {
  background-color: #1989fa;
  color: #fff;
}

/* 卡片样式 */
.card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

/* 图表 */
.chart-card {
  min-height: 400rpx;
}

.chart-canvas {
  width: 100%;
  height: 350rpx;
}

/* 排行榜 */
.rank-list {
  margin: -10rpx 0;
}

.rank-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.rank-item:last-child {
  border-bottom: none;
}

.rank-num {
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  border-radius: 50%;
  background-color: #f0f0f0;
  font-size: 28rpx;
  font-weight: bold;
  margin-right: 20rpx;
}

.rank-num.top-1 {
  background: linear-gradient(135deg, #ffd700 0%, #ffb347 100%);
  color: #fff;
}

.rank-num.top-2 {
  background: linear-gradient(135deg, #c0c0c0 0%, #a8a8a8 100%);
  color: #fff;
}

.rank-num.top-3 {
  background: linear-gradient(135deg, #cd7f32 0%, #b87333 100%);
  color: #fff;
}

.rank-info {
  flex: 1;
}

.player-name {
  display: block;
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 6rpx;
}

.player-position {
  font-size: 24rpx;
  color: #999;
}

.rank-value {
  text-align: right;
}

.rank-value .value {
  font-size: 36rpx;
  font-weight: bold;
  color: #1989fa;
}

.rank-value .unit {
  font-size: 24rpx;
  color: #999;
  margin-left: 4rpx;
}

.empty-text {
  text-align: center;
  color: #999;
  padding: 40rpx 0;
}

/* 统计摘要 */
.summary-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
}

.summary-title {
  font-size: 28rpx;
  opacity: 0.9;
  margin-bottom: 20rpx;
}

.summary-stats {
  display: flex;
  justify-content: space-around;
}

.summary-item {
  text-align: center;
}

.summary-item .value {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.summary-item .label {
  font-size: 24rpx;
  opacity: 0.9;
}

/* 比赛列表样式 */
.match-list {
  margin: -10rpx 0;
}

.match-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.match-item:last-child {
  border-bottom: none;
}

.match-date-box {
  width: 80rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}

.match-date-box .month {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.8);
}

.match-date-box .day {
  font-size: 32rpx;
  font-weight: bold;
  color: #fff;
}

.match-content {
  flex: 1;
}

.match-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.match-header .opponent {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.match-header .result {
  font-size: 24rpx;
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
}

.match-header .result.win {
  background-color: #e8f5e9;
  color: #4caf50;
}

.match-header .result.draw {
  background-color: #fff3e0;
  color: #ff9800;
}

.match-header .result.loss {
  background-color: #ffebee;
  color: #f44336;
}

.match-info {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.match-info .score {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.match-info .location {
  font-size: 24rpx;
  color: #999;
}

.match-arrow {
  font-size: 28rpx;
  color: #ccc;
  padding: 10rpx;
}

.loading-tip {
  text-align: center;
  padding: 20rpx;
  color: #999;
  font-size: 24rpx;
}
