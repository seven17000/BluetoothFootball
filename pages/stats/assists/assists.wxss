page {
  background-color: #f5f7fa;
}

.container {
  padding: 20rpx;
}

/* 赛季选择器 */
.season-selector {
  margin-bottom: 20rpx;
}

.season-picker {
  display: flex;
  align-items: center;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 20rpx 24rpx;
}

.season-label {
  font-size: 28rpx;
  color: #666;
}

.season-value {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

.season-arrow {
  font-size: 20rpx;
  color: #999;
  margin-left: 10rpx;
}

/* Tab栏 */
.tab-bar {
  display: flex;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 10rpx;
  margin-bottom: 20rpx;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 20rpx;
  font-size: 28rpx;
  color: #666;
  border-radius: 12rpx;
}

.tab-item.active {
  background-color: #1989fa;
  color: #fff;
}

/* 卡片样式 */
.card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

/* 排行榜 */
.rank-list {
  margin: -10rpx 0;
}

.rank-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.rank-item:last-child {
  border-bottom: none;
}

.rank-num {
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  border-radius: 50%;
  background-color: #f0f0f0;
  font-size: 28rpx;
  font-weight: bold;
  margin-right: 20rpx;
}

.rank-num.top-1 {
  background: linear-gradient(135deg, #ffd700 0%, #ffb347 100%);
  color: #fff;
}

.rank-num.top-2 {
  background: linear-gradient(135deg, #c0c0c0 0%, #a8a8a8 100%);
  color: #fff;
}

.rank-num.top-3 {
  background: linear-gradient(135deg, #cd7f32 0%, #b87333 100%);
  color: #fff;
}

.rank-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 20rpx;
  overflow: hidden;
}

.rank-avatar .avatar-img {
  width: 100%;
  height: 100%;
}

.rank-avatar .avatar-text {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: 600;
  color: #fff;
  border-radius: 50%;
}

.rank-info {
  flex: 1;
}

.player-name {
  display: block;
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 6rpx;
}

.player-position {
  font-size: 24rpx;
  color: #999;
}

.rank-value {
  text-align: right;
}

.rank-value .value {
  font-size: 36rpx;
  font-weight: bold;
  color: #1989fa;
}

.rank-value .unit {
  font-size: 24rpx;
  color: #999;
  margin-left: 4rpx;
}

.empty-text {
  text-align: center;
  color: #999;
  padding: 40rpx 0;
}

/* 比赛列表样式 */
.match-list {
  margin: 0 -20rpx;
  padding: 0 20rpx;
}

.match-item {
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.match-item:last-child {
  border-bottom: none;
}

.match-row-1 {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 8rpx;
}

.match-team {
  font-size: 32rpx;
  font-weight: bold;
  color: #1989fa;
  flex: 1;
}

.match-result-capsule {
  font-size: 24rpx;
  font-weight: bold;
  color: #fff;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  flex: 1;
  text-align: center;
}

.match-result-capsule.win {
  background: linear-gradient(135deg, #52c41a 0%, #389e0d 100%);
}

.match-result-capsule.draw {
  background: linear-gradient(135deg, #faad14 0%, #d48806 100%);
}

.match-result-capsule.loss {
  background: linear-gradient(135deg, #fa5151 0%, #cf1322 100%);
}

.match-opponent {
  font-size: 32rpx;
  font-weight: bold;
  color: #1989fa;
  flex: 1;
  text-align: right;
}

.match-row-2 {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.match-jersey-left {
  font-size: 22rpx;
  color: #999;
  flex: 1;
}

.match-datetime {
  font-size: 24rpx;
  color: #666;
  flex: 1;
  text-align: center;
}

.match-datetime text {
  display: inline-block;
  margin-right: 16rpx;
}

.match-datetime text:last-child {
  margin-right: 0;
}

.match-jersey-right {
  font-size: 22rpx;
  color: #999;
  flex: 1;
  text-align: right;
}

.loading-tip {
  text-align: center;
  padding: 20rpx;
  color: #999;
  font-size: 24rpx;
}
